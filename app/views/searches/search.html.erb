<div class="container">
  <% @posts.each do |post| %>
    <div class="row">
      <div class="col-11">
         <div class="card">
          <%= link_to post_path(post.id) do %>
            <p class="card-text">
              <%= safe_join(post.body.split("\n"),tag(:br))  %>
              <div>
                <% post.images.each do |image| %>
                  <%= image_tag(image, width:150) %>
                <% end %>
              </div>
            </p>
          <% end %>
        </div>
      </div>
    </div>
    <br>
  <% end %>
</div>

